        </div>
    <!-- end testimonial -->
    <!-- progress bar -->
    <div class="col-md-6">
        <div class="dash_blog">
            <div class="dash_blog_inner">
                <div class="dash_head">
                    <h3><span><i class="fa fa-comments-o"></i> Mesajlar </span><span class="plus_green_bt"></span></h3>
                </div>
                <div class="list_cont">
                    <p>Okunmamış Mesajlar</p>
                </div>

                @foreach (var item in Model.Where(x => x.İsRead == true))
                {<div class="msg_list_main">
                        <ul class="msg_list">
                            <li>
                                <span>
                                    <span class="name_user">@item.NameSurname</span>
                                    <span class="msg_user" style="color: red;">@((item.İsRead != null && item.İsRead.Value ? "Okunmadı" : ""))</span>
                                    <span class="time_ago">@item.SendDate</span>
                                </span>
                            </li>

                        </ul>
                    </div>
                }


                <div class="read_more">
                    <div class="center"><a class="main_bt read_bt" href="/Contact/Index/">Mesajlarıma Git</a></div>
                </div>
            </div>
        </div>
    </div>
    <!-- end progress bar -->
</div>
