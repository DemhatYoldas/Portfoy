@model Portfoy.Models.TblTestimonial

@{
    ViewBag.Title = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<br />
<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Yetenek Ekleme Sayfası</h5>
                </div>
                <div class="card-body">
                    <form action="/Testimonial/CreateTestimonial" method="post">
                        <!-- Post işlemi için form oluşturuluyor -->
                        <div>
                            <strong>Adı Soyadı :</strong>
                            @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
                        </div>
                        <br />
                        <div>
                            <strong>Pozisyon :</strong>
                            @Html.TextBoxFor(x => x.Position, new { @class = "form-control" })
                        </div>
                        <br />
                        <div>
                            <strong>Açıklama :</strong>
                            @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
                        </div>
                        <br />
                        <div>
                            <strong>Resim Url :</strong>
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                        </div>
                        <br />
                        <div>
                            <strong>Durum:</strong>
                            <select class="form-control" id="Durum" name="Durum" required>
                                <option selected disabled>Durum Seçiniz</option>
                                <option value="true" style="background-color: #28a745; color: #fff;">Aktif Et</option>
                                <option value="false" style="background-color: #dc3545; color: #fff;">Pasif Et</option>
                            </select>
                        </div>
                        <br />
                        <div class="card-footer">
                            <button type="submit" class="btn btn-success">Kaydet</button>
                            <a href="/Testimonial/Index" class="btn btn-danger">Geridön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
