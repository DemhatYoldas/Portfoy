@model Portfoy.Models.TblEducation
@{
    ViewBag.Title = "UpdateEducation";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<br />
<br />
<br />
<form class="form-control" method="post">
    <div class="form-group">
        <label for="CategoryName" class="form-label h5">Eğitim ID</label>
        <input type="text" class="form-control" id="ID" value="@Model.ID" name="ID" required>
    </div>
    <div>
        <label for="CategoryName" class="form-label h5">Eğitim Durumu </label>
        <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" placeholder="Eğitim Durumunu Giriniz">
    </div>

    <div>
        <label for="CategoryName" class="form-label h5">Okul Adı </label>
        <input type="text" class="form-control" id="EducationName" name="EducationName" value="@Model.EducationName" placeholder="Okul Adı Giriniz">
    </div>


    <div>
        <label for="CategoryName" class="form-label h5">Başlangıç Tarihi </label>
        <input type="text" class="form-control" id="StartingDate" name="StartingDate"
               value="@Model.StartingDate" placeholder="Başlangıç Tarihi Giriniz">
    </div>


    <div>
        <label for="CategoryName" class="form-label h5">Bitiş Tarihi </label>
        <input type="text" class="form-control" id="EndDate" name="EndDate" value="@Model.EndDate" placeholder="Bitiş Tarihi Giriniz">
    </div>

    <div class="form-group">
        <label for="Durum" class="form-label h5">Durum</label>
        <select class="form-select form-select-lg" id="Durum" name="Durum" value="@Model.Durum" required>
            <option selected disabled>Durum Seçiniz</option>
            <option value="true" style="background-color: #28a745; color: #fff;">Bitti</option>
            <option value="false" style="background-color: #dc3545; color: #fff;">Devam ediyor</option>
        </select>
    </div>
    <div class="form-group">
        <button class="btn btn-primary btn-lg">Güncelle</button>
    </div>
</form>
