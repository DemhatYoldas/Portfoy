@model Portfoy.Models.TblProject
@{
    ViewBag.Title = "UpdateProject";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<br />
<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Mesaj İçeriği</h5>
                </div>
                <div class="card-body">

                    <div>
                        <strong>Ad Soyad:</strong> @Model.NameSurname
                    </div>
                    <br />
                    <div>
                        <strong>Mail:</strong> @Model.Mail
                    </div>
                    <br />
                    <div>
                        <strong>Tarih:</strong> @Model.SendDate
                    </div>
                    <br />
                    <div>
                        <strong>Konu:</strong> @Model.Title
                    </div>
                    <br />
                    <div>
                        <strong>Mesaj:</strong>
                        <p><textarea class="form-control">@Model.Message</textarea></p>
                    </div>
                    <br />

                </div>
                <div class="card-footer">
                    <a href="/Contact/isreadContact/@Model.ID" class="btn btn-primary">Okundu Olarak İşaretle</a>
                    <a href="/Contact/Index" class="btn btn-danger">Sayfadan Çık</a>
                </div>
            </div>
        </div>
    </div>
</div>


