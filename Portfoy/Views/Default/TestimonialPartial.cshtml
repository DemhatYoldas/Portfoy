@model List<Portfoy.Models.TblTestimonial>

<div class="container-fluid bg-light py-5 my-5" id="testimonial">
    <div class="container-fluid py-5">
        <h1 class="display-5 text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Referanslarım</h1>
        <div class="row justify-content-center">
            <div class="col-lg-3 d-none d-lg-block">
                <div class="testimonial-left h-100">
                    @foreach (var item1 in Model)
                    {
                        /* !!!! ID kısmı ile data-wow-delay  eşitledinde animasyonun başlatılması geciktirir bu ilerde sorun olur !!!!*/
                        <img class="img-fluid wow fadeIn" data-wow-delay="@item1.ID s" src="@item1.ImageUrl" alt="">
                    }
                </div>
            </div>
            <!--buradaki data-wow-delay="0.5s böyle kalsın -->
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                <div class="owl-carousel testimonial-carousel">

                    @foreach (var item in Model)
                    {
                        <div class="testimonial-item text-center">
                            <div class="position-relative mb-5">
                                <img class="img-fluid rounded-circle border border-secondary p-2 mx-auto" src="@item.ImageUrl" alt="">
                                <div class="testimonial-icon">
                                    <i class="fa fa-quote-left text-primary"></i>
                                </div>
                            </div>
                            <p class="fs-5 fst-italic">@item.Description</p>
                            <hr class="w-25 mx-auto">
                            <h5>@item.NameSurname</h5>
                            <span>@item.Position</span>
                        </div>
                    }


                </div>
            </div>
            <div class="col-lg-3 d-none d-lg-block">
                <div class="testimonial-right h-100">
                    @foreach (var item2 in Model)
                    {
                        /* !!!! sağ ve sol kısımlardaki fotografları oluşturuyor ıd büyük oldunda sorun olur  !!!!*/
                        <img class="img-fluid wow fadeIn" data-wow-delay="@item2.ID s" src="@item2.ImageUrl" alt="">
                    }

                </div>
            </div>
        </div>
    </div>
</div>
