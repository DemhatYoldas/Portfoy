@model Tuple<List<Portfoy.Models.TblProject>, List<Portfoy.Models.TblCategory>>

<div class="container-xxl py-6 pt-5" id="project">
    <div class="container">
        <div class="row g-5 mb-5 align-items-center wow fadeInUp" data-wow-delay="0.1s">
            <div class="col-lg-6">
                <h1 class="display-5 mb-0">Projelerim</h1>
            </div>
            <div class="col-lg-6 text-lg-end">
                <ul class="list-inline mx-n3 mb-0" id="portfolio-flters">
                    <li class="mx-3 active" data-filter="*">Tüm Projelerim</li>
                    @foreach (var item in Model.Item2)
                    {
                        <li class="mx-3" data-filter=".@item.ID">@item.CategoryName Projelerim</li>
                    }
                </ul>
            </div>
        </div>
        <div class="row g-4 portfolio-container wow fadeInUp" data-wow-delay="0.1s">
            @foreach (var projectItem in Model.Item1)
            {
                <div class="col-lg-4 col-md-6 portfolio-item @projectItem.ProjectCategory">
                    <div class="portfolio-img rounded overflow-hidden">
                        <img class="img-fluid" src="@projectItem.ProjectImageUrl" alt="">
                        <div class="portfolio-btn">
                            <a class="btn btn-lg-square btn-outline-secondary border-2 mx-1" href="@projectItem.ProjectImageUrl" data-lightbox="portfolio"><i class="fa fa-eye"></i></a>
                            <a class="btn btn-lg-square btn-outline-secondary border-2 mx-1" href="@projectItem.ProjectUrl"><i class="fa fa-link"></i></a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
