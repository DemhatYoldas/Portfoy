@model List<Portfoy.Models.TblCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<br />
<br />
<br />

<div>
    <div class="white_shd full margin_bottom_30">
        <div class="full graph_head">
            <div class="heading1 margin_0">
                <h2>Kategoriler</h2>
            </div>
            <div>
                <!-- Kategori ekle butonu sağ tarafta yer alacak -->
                <a class="btn btn-success float-right" href="/Category/CreateCategory">Kategori ekle</a>
            </div>
        </div>
        <div class="table_section padding_infor_info">
            <div class="table-responsive-sm">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Kategori Adı</th>
                            <th>Durum</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.CategoryName</td>
                                <td style="color: @(item.Durum == true ? "green" : "red")">@Html.Raw(item.Durum == true ? "Aktif" : "Pasif")</td>
                                <td><a href="/Category/DeleteCategory/@item.ID" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Category/UpdateCategory/@item.ID" class="btn btn-success">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>